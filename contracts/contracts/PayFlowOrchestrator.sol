pragma solidity ^0.8.20;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

/**
 * @title PayFlowOrchestrator
  * @dev Main orchestrator contract for autonomous x402 payment routing
   * Enables AI agents to discover services, execute payments, and verify delivery
    * Built for Cronos x402 Paytech Hackathon
     */
     contract PayFlowOrchestrator is Ownable, ReentrancyGuard, Pausable {
         using SafeERC20 for IERC20;

             // Struct definitions
                 struct Agent {
                         address agentAddress;
                                 string agentId;
                                         uint256 reputation;
                                                 uint256 totalTransactions;
                                                         bool isActive;
                                                                 uint256 registeredAt;
                                                                     }

                                                                         struct Service {
                                                                                 address providerAddress;
                                                                                         string serviceId;
                                                                                                 string name;
                                                                                                         string endpoint;
                                                                                                                 uint256 pricePerCall; // in wei or token amount
                                                                                                                         address paymentToken; // address(0) for native CRO
                                                                                                                                 bool isActive;
                                                                                                                                         uint256 reputation;
                                                                                                                                                 uint256 totalCalls;
                                                                                                                                                         uint256 registeredAt;
                                                                                                                                                             }
                                                                                                                                                             
                                                                                                                                                                 struct Payment {
                                                                                                                                                                         bytes32 paymentId;
                                                                                                                                                                                 address agent;
                                                                                                                                                                                         address provider;
                                                                                                                                                                                                 string serviceId;
                                                                                                                                                                                                         uint256 amount;
                                                                                                                                                                                                                 address token;
                                                                                                                                                                                                                         uint256 timestamp;
                                                                                                                                                                                                                                 PaymentStatus status;
                                                                                                                                                                                                                                         bytes32 serviceProof; // Proof of service delivery
                                                                                                                                                                                                                                             }
                                                                                                                                                                                                                                             
                                                                                                                                                                                                                                                 enum PaymentStatus {
                                                                                                                                                                                                                                                         Pending,
                                                                                                                                                                                                                                                                 Completed,
                                                                                                                                                                                                                                                                         Failed,
                                                                                                                                                                                                                                                                                 Disputed,
                                                                                                                                                                                                                                                                                         Refunded
                                                                                                                                                                                                                                                                                             }
                                                                                                                                                                                                                                                                                             
                                                                                                                                                                                                                                                                                                 // State variables
                                                                                                                                                                                                                                                                                                     mapping(address => Agent) public agents;
                                                                                                                                                                                                                                                                                                         mapping(string => Service) public services;
                                                                                                                                                                                                                                                                                                             mapping(bytes32 => Payment) public payments;
                                                                                                                                                                                                                                                                                                                 mapping(address => uint256) public providerBalances;
                                                                                                                                                                                                                                                                                                                     
                                                                                                                                                                                                                                                                                                                         address[] public agentAddresses;
                                                                                                                                                                                                                                                                                                                             string[] public serviceIds;
                                                                                                                                                                                                                                                                                                                                 bytes32[] public paymentIds;
                                                                                                                                                                                                                                                                                                                                 
                                                                                                                                                                                                                                                                                                                                     // Platform fee (in basis points, e.g., 100 = 1%)
                                                                                                                                                                                                                                                                                                                                         uint256 public platformFeeBps = 50; // 0.5%
                                                                                                                                                                                                                                                                                                                                             uint256 public constant MAX_FEE_BPS = 1000; // 10% max
                                                                                                                                                                                                                                                                                                                                                 address public feeCollector;
                                                                                                                                                                                                                                                                                                                                                 
                                                                                                                                                                                                                                                                                                                                                     // Events
                                                                                                                                                                                                                                                                                                                                                         event AgentRegistered(address indexed agent, string agentId, uint256 timestamp);
                                                                                                                                                                                                                                                                                                                                                             event ServiceRegistered(string indexed serviceId, address indexed provider, uint256 pricePerCall);
                                                                                                                                                                                                                                                                                                                                                                 event PaymentInitiated(bytes32 indexed paymentId, address indexed agent, string serviceId, uint256 amount);
                                                                                                                                                                                                                                                                                                                                                                     event PaymentCompleted(bytes32 indexed paymentId, bytes32 serviceProof);
                                                                                                                                                                                                                                                                                                                                                                         event PaymentFailed(bytes32 indexed paymentId, string reason);
                                                                                                                                                                                                                                                                                                                                                                             event PaymentDisputed(bytes32 indexed paymentId);
                                                                                                                                                                                                                                                                                                                                                                                 event PaymentRefunded(bytes32 indexed paymentId, uint256 amount);
                                                                                                                                                                                                                                                                                                                                                                                     event ServiceUpdated(string indexed serviceId, uint256 newPrice);
                                                                                                                                                                                                                                                                                                                                                                                         event ProviderWithdrawal(address indexed provider, uint256 amount);
                                                                                                                                                                                                                                                                                                                                                                                         
                                                                                                                                                                                                                                                                                                                                                                                             constructor(address _feeCollector) Ownable(msg.sender) {
                                                                                                                                                                                                                                                                                                                                                                                                     require(_feeCollector != address(0), "Invalid fee collector");
                                                                                                                                                                                                                                                                                                                                                                                                             feeCollector = _feeCollector;
                                                                                                                                                                                                                                                                                                                                                                                                                 }
                                                                                                                                                                                                                                                                                                                                                                                                                 
                                                                                                                                                                                                                                                                                                                                                                                                                     // Agent functions
                                                                                                                                                                                                                                                                                                                                                                                                                         function registerAgent(string memory _agentId) external {
                                                                                                                                                                                                                                                                                                                                                                                                                                 require(bytes(_agentId).length > 0, "Invalid agent ID");
                                                                                                                                                                                                                                                                                                                                                                                                                                         require(agents[msg.sender].agentAddress == address(0), "Agent already registered");
                                                                                                                                                                                                                                                                                                                                                                                                                                         
                                                                                                                                                                                                                                                                                                                                                                                                                                                 agents[msg.sender] = Agent({
                                                                                                                                                                                                                                                                                                                                                                                                                                                             agentAddress: msg.sender,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                         agentId: _agentId,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     reputation: 1000, // Start with 1000 reputation
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 totalTransactions: 0,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             isActive: true,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         registeredAt: block.timestamp
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 });
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         agentAddresses.push(msg.sender);
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 emit AgentRegistered(msg.sender, _agentId, block.timestamp);
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     }
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         // Service provider functions
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             function registerService(
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     string memory _serviceId,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             string memory _name,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     string memory _endpoint,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             uint256 _pricePerCall,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     address _paymentToken
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         ) external {
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 require(bytes(_serviceId).length > 0, "Invalid service ID");
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         require(services[_serviceId].providerAddress == address(0), "Service already exists");
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 require(_pricePerCall > 0, "Price must be greater than 0");
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         services[_serviceId] = Service({
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     providerAddress: msg.sender,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 serviceId: _serviceId,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             name: _name,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         endpoint: _endpoint,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     pricePerCall: _pricePerCall,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 paymentToken: _paymentToken,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             isActive: true,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         reputation: 1000,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     totalCalls: 0,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 registeredAt: block.timestamp
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         });
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 serviceIds.push(_serviceId);
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         emit ServiceRegistered(_serviceId, msg.sender, _pricePerCall);
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             }
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 function updateServicePrice(string memory _serviceId, uint256 _newPrice) external {
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         Service storage service = services[_serviceId];
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 require(service.providerAddress == msg.sender, "Not service provider");
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         require(_newPrice > 0, "Invalid price");
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 service.pricePerCall = _newPrice;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         emit ServiceUpdated(_serviceId, _newPrice);
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             }
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 // Payment execution
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     function executePayment(
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             string memory _serviceId
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 ) external payable nonReentrant whenNotPaused returns (bytes32) {
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         Service storage service = services[_serviceId];
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 require(service.isActive, "Service not active");
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         require(agents[msg.sender].isActive, "Agent not active");
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 uint256 totalAmount;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         if (service.paymentToken == address(0)) {
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     // Native CRO payment
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 require(msg.value >= service.pricePerCall, "Insufficient payment");
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             totalAmount = msg.value;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     } else {
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 // ERC20 token payment
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             totalAmount = service.pricePerCall;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         IERC20(service.paymentToken).safeTransferFrom(msg.sender, address(this), totalAmount);
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 }
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         // Calculate platform fee
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 uint256 platformFee = (totalAmount * platformFeeBps) / 10000;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         uint256 providerAmount = totalAmount - platformFee;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 // Generate payment ID
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         bytes32 paymentId = keccak256(
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     abi.encodePacked(
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     msg.sender,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     _serviceId,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     block.timestamp,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     paymentIds.length
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 )
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         );
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 // Create payment record
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         payments[paymentId] = Payment({
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     paymentId: paymentId,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 agent: msg.sender,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             provider: service.providerAddress,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         serviceId: _serviceId,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     amount: providerAmount,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 token: service.paymentToken,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             timestamp: block.timestamp,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         status: PaymentStatus.Pending,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     serviceProof: bytes32(0)
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             });
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     paymentIds.push(paymentId);
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             // Update provider balance
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     providerBalances[service.providerAddress] += providerAmount;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             // Transfer platform fee
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     if (platformFee > 0) {
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 if (service.paymentToken == address(0)) {
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 payable(feeCollector).transfer(platformFee);
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             } else {
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             IERC20(service.paymentToken).safeTransfer(feeCollector, platformFee);
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         }
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 }
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         emit PaymentInitiated(paymentId, msg.sender, _serviceId, totalAmount);
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 return paymentId;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     }
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         // Service delivery confirmation
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             function confirmServiceDelivery(
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     bytes32 _paymentId,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             bytes32 _serviceProof
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 ) external {
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         Payment storage payment = payments[_paymentId];
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 require(payment.provider == msg.sender, "Not payment provider");
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         require(payment.status == PaymentStatus.Pending, "Payment not pending");
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 payment.status = PaymentStatus.Completed;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         payment.serviceProof = _serviceProof;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 // Update statistics
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         agents[payment.agent].totalTransactions++;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 services[payment.serviceId].totalCalls++;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 
